        let currentFormation = '433';

        function init() {
            for(let i=1; i<=11; i++) {
                const id = `p${i}`;
                const node = document.createElement('div');
                node.className = 'player-node is-empty';
                node.id = `node-${id}`;
                node.innerHTML = `
                    <div class="spec-popup" id="popup-${id}">
                        ${statsList.map(s => `<div class="spec-row"><span>${s}</span><span class="spec-val" id="val-${id}-${s}">0</span></div>`).join('')}
                    </div>
                    <div class="player-visual" id="visual-${id}">-</div>
                    <div class="player-label" id="label-${id}">빈 자리</div>
                `;
                pitch.appendChild(node);
                playersMap[id] = node;

                const card = document.createElement('div');
                card.className = 'bg-zinc-900 border border-zinc-800 p-4 rounded-xl';
                card.innerHTML = `
                    <div class="flex items-center gap-2 mb-3">
                        <span class="bg-red-500 text-white text-[9px] font-black px-1.5 py-0.5 rounded min-w-[30px] text-center" id="form-pos-label-${id}">-</span>
                        <input type="text" data-pos="${id}" data-type="name" placeholder="선수명" class="bg-transparent border-b border-zinc-800 outline-none focus:border-red-500 text-xs w-full py-1 text-white">
                    </div>
                    <div class="grid grid-cols-3 gap-1.5">
                        ${statsList.map(s => `
                            <div class="flex flex-col items-center bg-zinc-950 p-1 rounded border border-zinc-800">
                                <label class="text-[8px] text-zinc-500">${s}</label>
                                <input type="number" data-pos="${id}" data-stat="${s}" value="0" min="0" max="10" onfocus="this.select()" class="bg-transparent w-full text-center text-[10px] font-bold outline-none text-white">
                            </div>
                        `).join('')}
                    </div>
                `;
                inputFields.appendChild(card);
            }

            document.querySelectorAll('input').forEach(input => {
                input.addEventListener('input', (e) => {
                    if (e.target.type === 'number') {
                        let val = parseInt(e.target.value);
                        if (val > 10) e.target.value = 10;
                        if (val < 0 || isNaN(val)) e.target.value = 0;
                    }
                    sync();
                });
            });

            changeFormation('433');
            recommendPosition();
        }

        function recommendPosition() {
            const stats = {};
            statsList.forEach(s => {
                stats[s] = parseInt(document.getElementById(`rec-${s}`).value) || 0;
            });

            const logic = [
                { pos: 'ST (스트라이커)', score: (stats['슛'] * 0.45) + (stats['속도'] * 0.2) + (stats['피지컬'] * 0.2) + (stats['드리블'] * 0.15), desc: '최전방 해결사로 가장 적합합니다.' },
                { pos: 'Wing (윙어)', score: (stats['속도'] * 0.45) + (stats['드리블'] * 0.4) + (stats['패스'] * 0.15), desc: '측면을 흔드는 크랙 역할에 완벽합니다.' },
                { pos: 'CAM (공격형 미드필더)', score: (stats['패스'] * 0.4) + (stats['드리블'] * 0.3) + (stats['슛'] * 0.3), desc: '창의적인 플레이메이커로 활약하세요.' },
                { pos: 'CM (중앙 미드필더)', score: (stats['패스'] * 0.35) + (stats['수비'] * 0.2) + (stats['피지컬'] * 0.2) + (stats['속도'] * 0.1) + (stats['드리블'] * 0.15), desc: '공수의 핵심 엔진 역할입니다.' },
                { pos: 'CDM (수비형 미드필더)', score: (stats['수비'] * 0.35) + (stats['피지컬'] * 0.4) + (stats['패스'] * 0.25), desc: '포백 앞의 수비 사령관입니다.' },
                { pos: 'CB (센터백)', score: (stats['수비'] * 0.55) + (stats['피지컬'] * 0.4) + (stats['속도'] * 0.05), desc: '단단한 최후방 방어선입니다.' },
                { pos: 'FB (풀백/공격형 수비)', score: (stats['속도'] * 0.4) + (stats['수비'] * 0.3) + (stats['피지컬'] * 0.1) + (stats['패스'] * 0.2), desc: '폭발적인 오버래핑 능력을 가졌습니다.' }
            ];

            const best = logic.reduce((prev, current) => (prev.score > current.score) ? prev : current);
            
            document.getElementById('recommended-pos').textContent = best.pos;
            document.getElementById('recommended-desc').textContent = best.desc;
        }

        function changeFormation(fKey) {
            currentFormation = fKey;
            document.querySelectorAll('.formation-btn').forEach(btn => btn.classList.toggle('active', btn.id === `btn-${fKey}`));
            
            let displayTitle = fKey;
            if(fKey === '41212') displayTitle = '4-1-2-1-2 FB';
            
            document.getElementById('current-formation-title').textContent = displayTitle + ' Strategy';
            document.getElementById('capture-footer').textContent = displayTitle + ' - Soccer Strategy Board';

            formationData[fKey].forEach(pos => {
                const node = playersMap[pos.id];
                node.style.top = `${pos.top}%`;
                node.style.left = `${pos.left}%`;
                document.getElementById(`form-pos-label-${pos.id}`).textContent = pos.label;
                
                const popup = document.getElementById(`popup-${pos.id}`);
                popup.className = `spec-popup ${pos.pDir === 'bottom' ? 'spec-popup-bottom' : 'spec-popup-top'}`;
            });
            sync();
        }

        function sync() {
            Object.keys(playersMap).forEach(id => {
                const nameInput = document.querySelector(`input[data-type="name"][data-pos="${id}"]`);
                const name = nameInput ? nameInput.value.trim() : "";
                const node = playersMap[id];
                const visual = document.getElementById(`visual-${id}`);
                const label = document.getElementById(`label-${id}`);

                if (name) {
                    node.classList.remove('is-empty');
                    label.textContent = name;
                    visual.textContent = name.charAt(0);
                } else {
                    node.classList.add('is-empty');
                    label.textContent = '빈 자리';
                    const posInfo = formationData[currentFormation].find(p => p.id === id);
                    visual.textContent = posInfo ? posInfo.label : '-';
                }

                statsList.forEach(s => {
                    const statInput = document.querySelector(`input[data-pos="${id}"][data-stat="${s}"]`);
                    const val = statInput ? statInput.value : '0';
                    document.getElementById(`val-${id}-${s}`).textContent = val || '0';
                });
            });
        }

        function setMode(isReadonly) {
            const teamName = document.getElementById('team-name-input').value.trim() || "My Team";
            document.getElementById('team-name-display').textContent = teamName;
            document.getElementById('save-summary').textContent = `[${teamName}] 팀의 전략이 저장되었습니다.`;
            
            document.body.classList.toggle('readonly-mode', isReadonly);
            document.getElementById('mode-indicator').textContent = isReadonly ? 'View Mode' : 'Editing Mode';
            document.getElementById('mode-indicator').className = isReadonly ? 'text-[9px] font-bold text-blue-500 uppercase' : 'text-[9px] font-bold text-red-500 uppercase';
            
            if (isReadonly) window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        async function downloadImage() {
            const captureArea = document.getElementById('capture-area');
            const toast = document.getElementById('toast');
            const teamName = document.getElementById('team-name-input').value.trim() || "MyTeam";
            
            toast.textContent = "이미지 생성 중...";
            toast.style.display = 'block';
            toast.style.background = '#3b82f6';
            try {
                const canvas = await html2canvas(captureArea, { backgroundColor: '#09090b', scale: 2, logging: false, useCORS: true });
                const link = document.createElement('a');
                link.download = `${teamName}-${currentFormation}.png`;
                link.href = canvas.toDataURL('image/png');
                link.click();
                toast.textContent = "이미지가 저장되었습니다!";
                toast.style.background = '#22c55e';
            } catch (err) {
                toast.textContent = "저장 실패!";
                toast.style.background = '#ef4444';
            } finally {
                setTimeout(() => toast.style.display = 'none', 2000);
            }
        }

        function sendStrategy() {
            const teamName = document.getElementById('team-name-input').value.trim() || "무명 팀";
            let message = `⚽ [팀: ${teamName} | 포메이션: ${currentFormation}]\n\n`;
            
            formationData[currentFormation].forEach(pos => {
                const nameInput = document.querySelector(`input[data-type="name"][data-pos="${pos.id}"]`);
                const name = (nameInput ? nameInput.value.trim() : "") || "?";
                message += `[${pos.label}] ${name}\n`;
                const stats = statsList.map(s => `${s}:${document.getElementById(`val-${pos.id}-${s}`).textContent}`).join(' | ');
                message += `└ ${stats}\n`;
            });
            
            const el = document.createElement('textarea');
            el.value = message;
            document.body.appendChild(el);
            el.select();
            document.execCommand('copy');
            document.body.removeChild(el);
            
            const toast = document.getElementById('toast');
            toast.textContent = "전략 정보가 클립보드에 복사되었습니다!";
            toast.style.display = 'block';
            setTimeout(() => toast.style.display = 'none', 2000);
        }

        window.onload = init;
    </script>
</body>
</html>
